--
-- CREATE ALL JEMM2 PACKAGE DATABASE OBJECTS
--
-- THIS IS JUST A QUICK POST TO SHARE THESE 2 LITTLE SHORTCUTS TO CONVERT TEXT FROM LOWER CASE TO UPPERCASE AND VICEVERSA IN ECLIPSE.
-- LOWER CASE: CTRL+SHIFT+Y (CMD+SHIFT+Y ON MAC OS X)
-- UPPER CASE: CTRL+SHIFT+X (CMD+SHIFT+X ON MAC OS X)



--
-- PACKAGE
-- 		THIS TABLE DEFINES A PACKAGE OF ASSETS.  A PACKAGE CAN BE USED BY MANY CUSTOMERS AND IS UNIQUE ACROSS:
--			PARTID, BRAND_ASSET_TYPE, BASE_COLOR_TONES, ENHANCEMENT COLOR AND COLOR_SCHEME
--
DROP TABLE PACKAGE;
CREATE TABLE PACKAGE 
(
	ID NUMBER NOT NULL ENABLE,
	NAME VARCHAR2(250 BYTE) NOT NULL ENABLE,
	IDENTIFIER VARCHAR2(300 BYTE),
	PARTID NUMBER NOT NULL ENABLE,
	FIRSTCUSTOMERID VARCHAR2(50 BYTE),			-- USED TO HELP FIND ASSETS IN CUSTOMER PROFILE
	BRAND_ASSET_TYPE VARCHAR2(100 BYTE),
	BASE_COLOR_TONES VARCHAR2(100 BYTE),
	ENHANCEMENT_COLOR VARCHAR2(100 BYTE),
	COLOR1 VARCHAR2(100 BYTE),
	COLOR2 VARCHAR2(100 BYTE),
	COLOR3 VARCHAR2(100 BYTE),
	COLOR4 VARCHAR2(100 BYTE),
	COLOR5 VARCHAR2(100 BYTE),
	COLOR6 VARCHAR2(100 BYTE),
	COLOR7 VARCHAR2(100 BYTE),
	COLOR8 VARCHAR2(100 BYTE),
	COLOR9 VARCHAR2(100 BYTE),
	COLOR10 VARCHAR2(100 BYTE),
	BASE_COLOR VARCHAR2(100 BYTE),
	COLOR_SCHEME VARCHAR2(300 BYTE),
	
	CONSTRAINT "PACKAGE_PK" PRIMARY KEY ("ID")
);

--
-- ASSET
-- 		THIS TABLE DEFINES AS PART OF A PACKAGE
--
DROP TABLE ASSET;
CREATE TABLE ASSET 
(
	PACKAGEID NUMBER NOT NULL ENABLE,
	NAME VARCHAR2(250 BYTE) NOT NULL ENABLE UNIQUE,
	FOLDER_PATH VARCHAR2(300 BYTE),
	isBlack number,
	isGold number,
	isSilver number,
	isBestAvailable number
	
);


------------------------------------ SEQUENCES

-- SEQUENCE FOR ID COLUMN OF PACKAGE TABLE
DROP SEQUENCE PACKAGE_SEQUENCE;
CREATE SEQUENCE PACKAGE_SEQUENCE 
START WITH 1 
INCREMENT BY 1 
NOCACHE
NOMAXVALUE;
